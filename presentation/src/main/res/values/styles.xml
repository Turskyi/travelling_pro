<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>

    <!-- Custom AppTheme.Launcher. Sets drawable as background in splash screen. -->
    <style name="AppTheme.Launcher">
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="android:windowBackground">@drawable/layout_launch_screen</item>
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>

    <style name="FirebaseUI.Button" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="FirebaseUI" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/FirebaseUI.Button</item>
    </style>

    <!-- AppTheme for firebase authentication -->
    <style name="AuthTheme" parent="FirebaseUI">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- app bar -->
        <item name="colorControlNormal">@android:color/transparent</item>
        <!-- color of progress bar -->
        <item name="colorControlActivated">@android:color/white</item>
        <!-- ripple effect -->
        <item name="colorControlHighlight">@android:color/white</item>
        <!-- Required for sign-in flow styling -->
        <!-- app bar -->
        <item name="colorPrimary">@android:color/transparent</item>
        <!-- status bar -->
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <!-- Hyperlink color -->
        <item name="colorAccent">@android:color/white</item>
        <item name="android:paddingTop">16dp</item>
    </style>

    <style name="RecyclerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingStart">@dimen/offset_4</item>
        <item name="android:paddingEnd">@dimen/offset_4</item>
        <item name="android:layoutAnimation">@anim/layout_animation_from_bottom</item>
        <item name="layout_behavior">
            com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior
        </item>
    </style>

    <style name="ProgressBarStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/offset_4</item>
        <item name="android:visibility">visible</item>
        <item name="android:layout_marginTop">@dimen/offset_64</item>
        <item name="android:scaleType">centerInside</item>
        <item name="lottie_loop">true</item>
        <item name="lottie_autoPlay">true</item>
        <item name="lottie_rawRes">@raw/anim_flight</item>
    </style>

    <style name="LinearLayoutForListItemStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/offset_4</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_margin">@dimen/offset_4</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:drawablePadding">@dimen/offset_4</item>
        <item name="android:layout_weight">9</item>
        <item name="android:padding">@dimen/offset_4</item>
    </style>

    <style name="NoResultsTextViewStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">9</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/offset_4</item>
        <item name="android:text">@string/no_results</item>
        <item name="android:textSize">@dimen/headline6</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ImageViewStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/offset_4</item>
    </style>

    <style name="ToolbarTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/headline6</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="actionOverflowButtonStyle">@android:style/Widget.Holo.ActionButton.Overflow
        </item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="RoundShapedDarkAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_popup_dark</item>
    </style>

    <style name="DialogueBtnStyle">
        <item name="android:clickable">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/text_btn_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/offset_12</item>
        <item name="android:stateListAnimator">@anim/btn_anim</item>
        <item name="android:background">@drawable/bg_btn_different_states</item>
    </style>

    <style name="ShadowLayout">
        <item name="containerBackgroundColor">@android:color/black</item>
        <item name="shadowGravity">bottom</item>
        <item name="shadowRadius">@dimen/offset_8</item>
        <item name="containerElevation">@dimen/elevation_1</item>
        <item name="shadowColor">@android:color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:orientation">horizontal</item>
        <item name="scaleViewOnElevationChange">true</item>
        <item name="shadowMarginStart">@dimen/offset_8</item>
        <item name="shadowMarginTop">@dimen/offset_8</item>
    </style>

    <style name="CasualTextAppearance">
        <item name="android:fontFamily">casual</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowDx">2</item>
        <!--  shadowRadius must be in a range of 0-25 pixel bound-->
        <item name="android:shadowRadius">25</item>
        <item name="android:shadowColor">@android:color/transparent</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="CasualSmallTextAppearance">
        <item name="android:fontFamily">casual</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowDx">2</item>
        <item name="android:textSize">@dimen/subtitle2</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <!-- BottomSheet Dialog-->
    <!-- Makes the bottom sheet with round top borders -->
    <style name="BottomSheetShapeAppearance" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/radius_dialogue_corners</item>
        <item name="cornerSizeTopRight">@dimen/radius_dialogue_corners</item>
    </style>

    <style name="BottomSheetModal" parent="Widget.Design.BottomSheet.Modal">
        <item name="shapeAppearance">@style/BottomSheetShapeAppearance</item>
        <item name="behavior_peekHeight">@dimen/height_bottom_sheet</item>
        <item name="behavior_fitToContents">true</item>
        <item name="behavior_halfExpandedRatio">0.5</item>
    </style>

    <style name="BaseBottomSheetMenu" parent="Theme.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheetModal</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="BottomSheetMenuTheme" parent="@style/BaseBottomSheetMenu" />

    <!-- Multiline collapsing toolbar styles -->
    <style name="Widget.Design.MultilineCollapsingToolbar" parent="@style/Widget.Design.CollapsingToolbar" />

    <style name="ActionBar.Title" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title" />

    <style name="CoordinatorLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:animateLayoutChanges">true</item>
        <item name="android:animationCache">true</item>
        <item name="android:persistentDrawingCache">animation</item>
        <item name="android:background">@android:color/black</item>
        <!-- android:fitsSystemWindows="true" makes status bar the same color as the content -->
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="CollapsingToolbarLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/offset_8</item>
        <item name="contentScrim">?attr/colorPrimary</item>
        <item name="layout_scrollFlags">scroll|snap|enterAlways</item>
        <item name="toolbarId">@+id/toolbar</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:gravity">top</item>
        <item name="theme">@style/ToolbarTitleStyle</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="layout_collapseMode">pin</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="navigationIcon">?attr/homeAsUpIndicator</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="ImageButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingTop">@dimen/offset_4</item>
        <item name="android:paddingEnd">@dimen/offset_8</item>
        <item name="android:src">@drawable/ic_search</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:labelFor">@+id/ib_search</item>
        <item name="android:maxLength">100</item>
        <item name="android:paddingTop">@dimen/offset_4</item>
        <item name="android:paddingBottom">@dimen/offset_4</item>
        <item name="android:paddingStart">@dimen/offset_8</item>
        <item name="android:paddingEnd">@dimen/offset_8</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="FloatingActionButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:drawingCacheQuality">auto</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:focusable">true</item>
        <item name="android:soundEffectsEnabled">true</item>
        <item name="elevation">@dimen/elevation_4</item>
        <item name="fabCustomSize">@dimen/size_search_fab_custom</item>
        <item name="fabSize">auto</item>
        <item name="layout_anchorGravity">bottom|end</item>
        <item name="maxImageSize">@dimen/size_search_fab_max_image</item>
        <item name="useCompatPadding">true</item>
    </style>

    <style name="MultilineCollapsingToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:soundEffectsEnabled">true</item>
        <item name="collapsedTitleGravity">start</item>
        <item name="collapsedTitleTextAppearance">@style/CasualSmallTextAppearance</item>
        <item name="contentScrim">@android:color/black</item>
        <item name="expandedTitleGravity">bottom|center</item>
        <item name="expandedTitleTextAppearance">@style/CasualTextAppearance</item>
        <item name="layout_scrollFlags">scroll|exitUntilCollapsed</item>
        <item name="scrimAnimationDuration">@android:integer/config_longAnimTime</item>
        <item name="statusBarScrim">@android:color/black</item>
        <item name="toolbarId">@+id/toolbar</item>
    </style>

    <style name="FrameLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">@dimen/offset_10</item>
        <item name="android:paddingBottom">@dimen/offset_40</item>
        <item name="layout_collapseMode">pin</item>
    </style>

    <style name="CirclePieChartStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:elevation">@dimen/elevation_4</item>
        <item name="android:soundEffectsEnabled">true</item>
    </style>

</resources>
